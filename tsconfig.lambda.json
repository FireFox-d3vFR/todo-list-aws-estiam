{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "lambdas/**/*",
      "lib/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "next-env.d.ts",
      ".next"
    ]
}

  